{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",

  "SendGridSettings": {
    "ApiKey": "your-sendgrid-api-key",
    "FromEmail": "your-email@example.com",
    "FromName": "Your App Name"
  },

  "EmailSettings": {
    "MaxRetryAttempts": 3,
    "RetryBaseDelaySeconds": 2
  }
}
